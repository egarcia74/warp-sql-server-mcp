# SQL Server Connection Configuration
SQL_SERVER_HOST=localhost
SQL_SERVER_PORT=1433
SQL_SERVER_DATABASE=master
SQL_SERVER_USER=sa
SQL_SERVER_PASSWORD=Valkyrie12!@

# Optional: For Windows Authentication, leave USER and PASSWORD empty
# SQL_SERVER_DOMAIN=your_domain

# Security Settings
SQL_SERVER_ENCRYPT=true
SQL_SERVER_TRUST_CERT=false

# =============================================================================
# SAFETY CONFIGURATION - PRODUCTION SECURITY SETTINGS
# =============================================================================
# These settings control what SQL operations are allowed. The defaults provide
# maximum security by blocking all potentially dangerous operations.
#
# ‚ö†Ô∏è  IMPORTANT: These settings significantly impact security. Review carefully!
# üîí For production: Keep all three settings as shown (maximum security)
# üîß For development: You may need to adjust based on your requirements

# Read-Only Mode (Default: true - SECURE)
# When enabled, only SELECT queries are allowed
# Set to 'false' to enable INSERT, UPDATE, DELETE, and schema changes
SQL_SERVER_READ_ONLY=true

# Allow Destructive Operations (Default: false - SECURE)
# When disabled, blocks INSERT, UPDATE, DELETE, TRUNCATE operations
# Only applies when read-only mode is disabled
# Set to 'true' to enable data modification operations
SQL_SERVER_ALLOW_DESTRUCTIVE_OPERATIONS=false

# Allow Schema Changes (Default: false - SECURE) 
# When disabled, blocks CREATE, DROP, ALTER, GRANT, REVOKE operations
# Only applies when read-only mode is disabled
# Set to 'true' to enable database schema modifications
SQL_SERVER_ALLOW_SCHEMA_CHANGES=false

# =============================================================================
# SECURITY CONFIGURATION EXAMPLES
# =============================================================================
#
# üîí MAXIMUM SECURITY (Default - Recommended for Production)
# SQL_SERVER_READ_ONLY=true
# SQL_SERVER_ALLOW_DESTRUCTIVE_OPERATIONS=false
# SQL_SERVER_ALLOW_SCHEMA_CHANGES=false
# Result: Only SELECT queries allowed
#
# üìä DATA ANALYSIS (Read + Limited Write)
# SQL_SERVER_READ_ONLY=false
# SQL_SERVER_ALLOW_DESTRUCTIVE_OPERATIONS=true
# SQL_SERVER_ALLOW_SCHEMA_CHANGES=false
# Result: SELECT + INSERT/UPDATE/DELETE allowed, no schema changes
#
# üõ†Ô∏è FULL DEVELOPMENT MODE (All Operations - Use with Caution)
# SQL_SERVER_READ_ONLY=false
# SQL_SERVER_ALLOW_DESTRUCTIVE_OPERATIONS=true
# SQL_SERVER_ALLOW_SCHEMA_CHANGES=true
# Result: All SQL operations allowed including CREATE/DROP/ALTER
# ‚ö†Ô∏è  WARNING: Only use this for development/testing environments!

# Connection Timeout and Retry Configuration
SQL_SERVER_CONNECT_TIMEOUT_MS=10000
SQL_SERVER_REQUEST_TIMEOUT_MS=30000
SQL_SERVER_MAX_RETRIES=3
SQL_SERVER_RETRY_DELAY_MS=1000

# Connection Pool Settings
SQL_SERVER_POOL_MAX=10
SQL_SERVER_POOL_MIN=0
SQL_SERVER_POOL_IDLE_TIMEOUT_MS=30000

# =============================================================================
# PERFORMANCE MONITORING CONFIGURATION
# =============================================================================
# Advanced performance monitoring and query analysis features

# Enable Performance Monitoring (Default: true)
# Tracks query performance, execution times, and connection health
ENABLE_PERFORMANCE_MONITORING=true

# Maximum Performance Records (Default: 1000)
# Number of performance metrics to retain in memory
MAX_METRICS_HISTORY=1000

# Slow Query Threshold (Default: 5000ms)
# Queries taking longer than this are flagged as slow
SLOW_QUERY_THRESHOLD=5000

# Connection Pool Metrics (Default: true)
# Monitor connection pool health and utilization
TRACK_POOL_METRICS=true

# Performance Sampling Rate (Default: 1.0)
# Fraction of queries to monitor (1.0 = 100%, 0.5 = 50%)
PERFORMANCE_SAMPLING_RATE=1.0

# =============================================================================
# STREAMING CONFIGURATION
# =============================================================================
# Intelligent streaming for large dataset handling

# Enable Streaming (Default: true)
# Automatically stream large result sets to prevent memory issues
ENABLE_STREAMING=true

# Streaming Batch Size (Default: 1000)
# Number of rows processed per batch during streaming
STREAMING_BATCH_SIZE=1000

# Streaming Memory Limit (Default: 100MB)
# Memory threshold before streaming activation
STREAMING_MAX_MEMORY_MB=100

# Streaming Response Size Limit (Default: 10MB)
# Response size limit for automatic chunking
STREAMING_MAX_RESPONSE_SIZE=10485760

# =============================================================================
# LOGGING AND DEBUGGING CONFIGURATION
# =============================================================================

# Debug Mode (Default: false)
# Enable enhanced logging and debugging information
SQL_SERVER_DEBUG=false

# Log Level (Options: error, warn, info, debug)
# Controls the verbosity of logging output
SQL_SERVER_LOG_LEVEL=info

# Security Audit (Default: false)
# Enable security audit trail for sensitive operations
ENABLE_SECURITY_AUDIT=false

# Response Format (Options: json, table, csv)
# Optimize response format for different use cases
SQL_SERVER_RESPONSE_FORMAT=json
